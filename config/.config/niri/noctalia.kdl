layout {

    focus-ring {
        active-color   "#9ccaff"
        inactive-color "#121316"
        urgent-color   "#ffb4ab"
    }

    border {
        active-color   "#9ccaff"
        inactive-color "#121316"
        urgent-color   "#ffb4ab"
    }

    shadow {
        color "#00000070"
    }

    tab-indicator {
        active-color   "#9ccaff"
        inactive-color "#00497b"
        urgent-color   "#ffb4ab"
    }

    insert-hint {
        color "#9ccaff80"
    }
